<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<ScrollPane fx:id="carGalleryScrollPane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.talhacolak.carrental.controller.CarGalleryController">
    <content>
        <TilePane fx:id="carTilePane" alignment="CENTER" hgap="45.0" maxHeight="-Infinity" maxWidth="-Infinity"
                  minHeight="-Infinity" minWidth="-Infinity" prefColumns="3" prefHeight="680.0" prefTileHeight="210.0"
                  prefTileWidth="280.0" prefWidth="1090.0" style="-fx-background-color: #219ebc;" vgap="20.0">
            <children>
                <!--AraÃ§ ekleme butonu-->
                <AnchorPane fx:id="carAddTile" prefHeight="210.0" prefWidth="280.0"
                            style="-fx-border-color: black; -fx-border-width: 1;                             -fx-background-color: White;">
                    <children>
                        <FontAwesomeIconView fx:id="carAdd" glyphName="PLUS" layoutX="65.0" layoutY="105.0"
                                             onMouseClicked="#carAdd" size="16em" textOrigin="CENTER"/>
                    </children>
                </AnchorPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </TilePane>
    </content>
</ScrollPane>
